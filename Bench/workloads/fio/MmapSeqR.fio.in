#
# run command for this workload:
# numactl -N 0 fio MmapSeqR.fio  # it binds this FIO workload to CPU 0 only.
#
[global]
thread=1
group_reporting
norandommap
overwrite=1
thinktime=0
sync=0
direct=0

ioengine=mmap
iodepth=1

directory=/dev/shm  # I'm working on directory; each of 'numjobs' gets its own file to work with
size=1GB  # Each file will have this size
unlink=0

time_based
runtime=15
ramp_time=5

[SeqRead]
bs=BSIZE
numjobs=NJOBS  # depending on CPU core count more can be better, but also can be a bottleneck

rw=randrw
rwmixread=50
percentage_random=0
